pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "abbashafiz09"
        APP_NAME = "anycater"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AbbasHafiz/AnyCater.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKERHUB_USER/$APP_NAME:${BUILD_NUMBER} .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub-token', variable: 'DOCKERHUB_PASS')]) {
                    sh 'echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin'
                    sh 'docker push $DOCKERHUB_USER/$APP_NAME:${BUILD_NUMBER}'
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(['deploy-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ubuntu@98.81.4.37 "
                          docker pull $DOCKERHUB_USER/$APP_NAME:${BUILD_NUMBER} &&
                          docker stop $APP_NAME || true &&
                          docker rm $APP_NAME || true &&
                          docker run -d --name $APP_NAME -p 3000:3000 $DOCKERHUB_USER/$APP_NAME:${BUILD_NUMBER}
                        "
                    '''
                }
            }
        }
    }
}
